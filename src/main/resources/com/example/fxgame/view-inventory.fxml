<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.fxgame.ViewInventory"
      prefHeight="400.0" prefWidth="600.0"
      alignment="CENTER"
>
    <padding>
        <Insets bottom="20.0" top="20.0"/>
    </padding>
    <GridPane fx:id="inventoryGrid" hgap="10" vgap="10" alignment="CENTER">
        <!-- Cells will be added dynamically from the controller -->
    </GridPane>
    <HBox fx:id="buttonBox" spacing="10" alignment="CENTER">
        <padding>
            <Insets bottom="20.0" top="20.0"/>
        </padding>
        <Button onAction="#dropItem" managed="false">Drop</Button>
        <Button onAction="#useItem" managed="false">Use</Button>
        <Button onAction="#equipItem" managed="false">Equip</Button>
        <Button onAction="#sellItem" managed="false">Sell</Button>
        <Button onAction="#back" managed="false">Back</Button>
    </HBox>
    <Text fx:id="msgtxt">
    </Text>

</VBox>
